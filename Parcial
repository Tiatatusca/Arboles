Nodo *RegistrarNodo (int n){
    Nodo * nuevo_nodo =  new nodo ();

    nuevo_nodo->dato = n;
    nuevo_nodo->der = null;
    nuevo_nodo->izq = null;

    return nuevo_nodo;


} 
void insertarNodo  (Nodo * &arbol , int n ){
    if (arbol ==null)
    Nodo * nuevo_nodo = RegistrarNodo (n);
    arbol = nuevo_nodo;
}
else{
    int valorRaiz = arbol->dato;
}


